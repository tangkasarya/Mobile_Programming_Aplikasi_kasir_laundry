<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_kuning">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laundry Bagus"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtNamaUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tukad Petanu, Denpasar, Bali"
                android:textColor="#666666"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/images__9_"
            android:contentDescription="Profile"
            android:padding="6dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFF176"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_margin="4dp"
            android:elevation="2dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_transaksi"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:id="@+id/txtTotalTransaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaksi"
                android:textColor="#333333" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#4FC3F7"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_margin="4dp"
            android:elevation="2dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_belum_lunas"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:id="@+id/txtBelumLunas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belum Lunas"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#AED581"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_margin="4dp"
            android:elevation="2dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_sudah_lunas"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:id="@+id/txtSudahLunas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="130"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sudah Lunas"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFB74D"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_margin="4dp"
            android:elevation="2dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_pelanggan"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:id="@+id/txtTotalPelanggan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="42"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pelanggan"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transaksi Terakhir"
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="16dp"
        android:textColor="#000000"
        android:drawableLeft="@drawable/ic_transaksi_terakhir"
        android:drawablePadding="8dp" />

    <ListView
        android:id="@+id/listTransaksiTerakhir"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:background="@android:color/white"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:id="@+id/navButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="4"
        android:background="#FFF176"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:elevation="4dp">

        <Button
            android:id="@+id/btnNavDashboard"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:textColor="#FF5722"
            android:drawableTop="@drawable/ic_dashboard"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/btnNavPelanggan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Pelanggan"
            android:textColor="#000000"
            android:drawableTop="@drawable/ic_nav_pelanggan"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/btnNavLayanan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Layanan"
            android:textColor="#000000"
            android:drawableTop="@drawable/ic_layanan"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/btnNavTransaksi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Transaksi"
            android:textColor="#000000"
            android:drawableTop="@drawable/ic_nav_transaksi"
            android:background="@android:color/transparent" />
    </LinearLayout>

</LinearLayout>
