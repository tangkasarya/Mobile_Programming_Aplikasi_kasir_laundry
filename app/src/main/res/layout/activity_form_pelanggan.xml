<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_kuning"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:padding="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="8dp">

        <TextView
            android:id="@+id/txtJudulForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Form Tambah Pelanggan"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Lengkap"
            android:textColor="#444444"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/edtNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan nama lengkap"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:drawableStart="@drawable/ic_nav_pelanggan" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nomor HP"
            android:textColor="#444444"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/edtNoHp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="08xxxxxxxxxx"
            android:inputType="phone"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:drawableStart="@drawable/ic_nohp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alamat"
            android:textColor="#444444"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/edtAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan alamat pelanggan"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:drawableStart="@drawable/ic_alamat" />

        <Button
            android:id="@+id/btnSimpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIMPAN"
            android:layout_marginTop="24dp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="14dp" />
    </LinearLayout>
</ScrollView>
