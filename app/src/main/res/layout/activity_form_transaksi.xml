<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_kuning"
    android:fitsSystemWindows="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:padding="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="8dp">

            <TextView
                android:id="@+id/txtJudulForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Form Tambah Transaksi"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Pelanggan"
                android:textColor="#444444"
                android:drawableStart="@drawable/ic_nav_pelanggan"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spinnerPelanggan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Layanan"
                android:layout_marginTop="16dp"
                android:textColor="#444444"
                android:drawableStart="@drawable/ic_layanan"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spinnerLayanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harga per Kg"
                android:layout_marginTop="16dp"
                android:textColor="#444444"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtHarga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:textColor="#000000"
                android:drawableStart="@drawable/ic_hargaperkg"
                android:textColorHint="#888888" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Berat (kg)"
                android:layout_marginTop="16dp"
                android:textColor="#444444"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtBerat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:textColor="#000000"
                android:drawableStart="@drawable/ic_berat"
                android:textColorHint="#888888" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Harga"
                android:layout_marginTop="16dp"
                android:textColor="#444444"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:textColor="#000000"
                android:drawableStart="@drawable/ic_hargaperkg"
                android:textColorHint="#888888" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Transaksi"
                android:layout_marginTop="16dp"
                android:textColor="#444444"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtTanggalTransaksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:padding="12dp"
                android:textColor="#000000"
                android:drawableStart="@drawable/ic_tanggal"
                android:textColorHint="#888888" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Selesai"
                android:layout_marginTop="16dp"
                android:textColor="#444444"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtTanggalSelesai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:padding="12dp"
                android:textColor="#000000"
                android:drawableStart="@drawable/ic_tanggal"
                android:textColorHint="#888888" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:layout_marginTop="16dp"
                android:textColor="#444444"
                android:drawableStart="@drawable/ic_status"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spinnerStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status Pembayaran"
                android:layout_marginTop="16dp"
                android:textColor="#444444"
                android:drawableStart="@drawable/ic_transaksi_terakhir"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spinnerStatusPembayaran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnSimpanTransaksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SIMPAN"
                android:layout_marginTop="24dp"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:padding="14dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
