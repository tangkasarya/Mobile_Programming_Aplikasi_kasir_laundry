<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient_kuning">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laundry Bagus"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtNamaUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tukad Petanu, Denpasar, Bali"
                android:textColor="#666666"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/images__9_"
            android:contentDescription="Profile"
            android:padding="6dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtJudul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daftar Pelanggan"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:padding="14dp"
            android:drawableLeft="@drawable/ic_nav_pelanggan"
            android:drawablePadding="10dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edtSearchPelanggan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cari pelanggan..."
            android:drawableStart="@android:drawable/ic_menu_search"
            android:padding="12dp"
            android:background="@android:color/white"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:layout_marginBottom="12dp"/>


        <ListView
            android:id="@+id/listPelanggan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:background="@android:color/white"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnTambahPelanggan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tambah Pelanggan"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/navButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="4"
        android:background="#FFF176"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:elevation="4dp">

        <Button
            android:id="@+id/btnNavDashboard"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:textColor="#000000"
            android:drawableTop="@drawable/ic_dashboard"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/btnNavPelanggan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Pelanggan"
            android:textColor="#FF5722"
            android:drawableTop="@drawable/ic_nav_pelanggan"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/btnNavLayanan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Layanan"
            android:textColor="#000000"
            android:drawableTop="@drawable/ic_layanan"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/btnNavTransaksi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Transaksi"
            android:textColor="#000000"
            android:drawableTop="@drawable/ic_nav_transaksi"
            android:background="@android:color/transparent" />
    </LinearLayout>
</LinearLayout>
